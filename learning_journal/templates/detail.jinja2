{% extends "layout.jinja2" %}
{% block title %}Benny's Learning Journal - Entry {{ jentry.id }}{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="full column" style="margin-top: 25%">
      <h4>{{ jentry.title }}</h4>
      <p>Posted: {{ jentry.created }}</p>
      <p>{{ jentry.content }}</p>
      <p>Last Modified: {{ jentry.modified }}</p>
      <a class="button " href="{{ request.route_url('update', id=jentry.id) }}">Edit</a>
    </div>
  </div>
</div>
{% endblock %}