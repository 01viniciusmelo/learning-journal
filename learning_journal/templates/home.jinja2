{% extends "base.jinja2" %}
{% block title %}Home{% endblock%}

{% block body %}
<h1>My Learning Journal</h1>
<p>My personal learning journal.</p>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date/Time</th>
      <th class="hide_mobile">Category</th>
    </tr>
  </thead>
  <tbody>
    {% for jentry in journal %}
      <tr class="clickable-row" data-href="{{ request.route_url('detail', id=jentry.id) }}">
        <td>
          <a href="{{ request.route_url('detail', id=jentry.id) }}">
            {{ jentry.title }}
          </a>
        </td>
        <td>{{ jentry.created.strftime('%A %b %d, %Y') }}</td>
        <td class="hide_mobile">{{ jentry.category }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
