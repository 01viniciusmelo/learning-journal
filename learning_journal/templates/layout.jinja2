<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>
      {% block title %}{% endblock %} - My Learning Journal
  </title>
  <meta name="description" content="Ben Petty's personal learning journal.">
  <meta name="author" content="Benjamin S. Petty">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="/static/css/normalize.css">
  <link href="/static/css/bootstrap.min.css" rel="stylesheet" media="screen">

    <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        border: 1px solid #e5e5e5;
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>
    <link href="/static/css/bootstrap-responsive.css" rel="stylesheet">

  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <script src="/static/js/html5shiv.js"></script>
  <![endif]-->

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.ico">
  <link rel="shortcut icon" href="${ request.static_url('learning_journal:static/images/favicon.ico') }">

<!-- Scripts
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->


</head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

  <nav>
    <a class="button" href="{{ request.route_url('list') }}">Home</a>
    {% if request.authenticated_userid %}
    <a class="button " href="{{ request.route_url('create') }}">New Entry</a>
    <a class="button" href="{{ request.route_url('logout') }}">Logout</a>
    {% else %}
    <a class="button" href="{{ request.route_url('login') }}">Login</a>
    {% endif %}
    {% if user.admin %}
    <a class="button" href="{{ request.route_url('users') }}">Admin: Users</a>
    {% endif %}
    {% if request.authenticated_userid %}
    <br />Logged in as 
      <a href="{{ request.route_url('profile', username=request.authenticated_userid) }}">
        {{ request.authenticated_userid }}
      </a>
    {% endif %}
  </nav>

  <div class="container">
    <div class="row">
      <div class="full column" style="margin-top: 25%; margin-bottom: 25%">
        <h4>My Learning Journal</h4>

  {% block body %}{% endblock %}

      </div>
    </div>
  </div>

  <div id="footer">
    {% block footer %}
    &copy; Copyright 2016 <a href="http://benpetty.me" target="_blank">Benjamin S. Petty</a>.
    {% endblock %}
  </div>

<!-- Scripts
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/button.js"></script>
    <script src="/static/js/carousel.js"></script>
    <script src="/static/js/collapse.js"></script>
    <script src="/static/js/dropdown.js"></script>
    <script src="/static/js/modal.js"></script>
    <script src="/static/js/popover.js"></script>
    <script src="/static/js/scrollspy.js"></script>
    <script src="/static/js/tab.js"></script>
    <script src="/static/js/tooltip.js"></script>
    <script src="/static/js/util.js"></script>
</body>
</html>