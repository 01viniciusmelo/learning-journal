{% extends "layout.jinja2" %}
{% block title %}Benny's Learning Journal - New Entry{% endblock%}

{% block body %}
<div class="container">
  <div class="row">
    <div class="full column" style="margin-top: 25%">
      <h4>Benny's Learning Journal</h4>
      <p>New entry</p>
      {# BEGIN FORM #}
      <form method="POST">
        <div class="row">
          <div class="six columns">
            <label for="title">Title</label>
            <input class="u-full-width" type="text" placeholder="Title" name="title">
          </div>
        </div>
        <label for="content">Content</label>
        <textarea class="u-full-width" placeholder="Today, I learned..." name="content"></textarea>
        </label>
        <input class="button-primary" type="submit" value="Submit">
      </form>
      {# END FORM #}
    </div>
  </div>
</div>
{% endblock %}